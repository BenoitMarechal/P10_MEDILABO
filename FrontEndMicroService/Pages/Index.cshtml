@page
@model FrontEndMicroService.Pages.IndexModel
@{
    ViewData["Title"] = "Patients";
}

<div class="d-flex w-100 justify-content-between align-items-center">
    <h1 class="mb-4">Patients</h1>
    <a href="/patients/create"
       class="btn btn-primary btn-sm">
        <i class="fas fa-plus"></i> Add patient
    </a>
</div>

@if (!Model.Patients.Any())
{
    <div class="alert alert-info">
        No patients found.
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Birth Date</th>
                <th>Gender</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Age</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patient in Model.Patients)
            {
                <tr>
                    <td>@patient.FirstName @patient.LastName</td>
                    <td>@patient.BirthDate.ToString("yyyy-MM-dd")</td>
                    <td>@patient.Gender</td>
                    <td>@patient.Address</td>
                    <td>@patient.PhoneNumber</td>
                    <td>@patient.Age</td>
                    <td>
                        <a href="/notes/patient/@patient.Id"
                           class="btn btn-primary btn-sm">
                            <i class="fas fa-sticky-note"></i> See Details
                        </a>
                    </td>

                    <td>
                        <a asp-page="/Patients/Edit" asp-route-id="@patient.Id"
                           class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </td>



                    <td>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@patient.Id"
                              onsubmit="return confirm('Are you sure you want to delete this patient?');">
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
