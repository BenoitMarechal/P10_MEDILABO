@page "/notes/patient/{id}"
@model FrontEndMicroService.Pages.NotesModel
@{
    ViewData["Title"] = "Patient Notes";
}

<style>
    .diagnosis-none {
        background-color: #6c757d !important; /* Gray - None */
    }
    .diagnosis-low {
        background-color: #28a745 !important; /* Green - Borderline */
    }
    .diagnosis-medium {
        background-color: #ffc107 !important; /* Yellow - In Danger */
        color: #000 !important;
    }
    .diagnosis-high {
        background-color: #dc3545 !important; /* Red - Early onset */
    }
    
    .info-item {
        display: flex;
        align-items: center;
        margin-bottom: 0.75rem;
    }
    
    .info-label {
        font-weight: bold;
        margin-right: 0.5rem;
        min-width: fit-content;
    }
    
    .info-value {
        flex: 1;
    }
</style>

<div class="container-fluid">
    <h1>Patient Notes</h1>

    @if (Model.Patient != null)
    {
        <!-- Patient Information Card -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-user me-2"></i>
                    @Model.Patient.FirstName @Model.Patient.LastName
                </h5>
                <small class="text-muted">ID: @Model.Patient.Id</small>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="info-item">
                            <span class="info-label">Birth Date:</span>
                            <span class="text-muted info-value">@Model.Patient.BirthDate.ToString("MMMM dd, yyyy")</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-item">
                            <span class="info-label">Gender:</span>
                            <span class="badge bg-@(Model.Patient.Gender.ToString().ToLower() == "male" ? "info" : "pink") text-white">
                                @Model.Patient.Gender
                            </span>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="info-item">
                            <span class="info-label">Phone:</span>
                            <span class="text-muted info-value">@(Model.Patient.PhoneNumber ?? "Not provided")</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-item">
                            <span class="info-label">Address:</span>
                            <span class="text-muted info-value">
                                @if (!string.IsNullOrWhiteSpace(Model.Patient.Address))
                                {
                                    @Model.Patient.Address
                                }
                                else
                                {
                                    <em>Not provided</em>
                                }
                            </span>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-12">
                        <div class="info-item">
                            <span class="info-label">Diabetes Risk:</span>
                            @{
                                string diagnosisClass = "diagnosis-none";
                                string diagnosis = Model.Diagnosis ?? "Not provided";
                                
                                // Match the diabetes risk calculation values with increasing severity
                                switch (Model.Diagnosis?.Trim())
                                {
                                    case "None":
                                        diagnosisClass = "diagnosis-none";    // Gray - No diabetes risk
                                        break;
                                    case "Borderline":
                                        diagnosisClass = "diagnosis-low";     // Green - Borderline diabetes risk
                                        break;
                                    case "In Danger":
                                        diagnosisClass = "diagnosis-medium";  // Yellow - In danger of diabetes
                                        break;
                                    case "Early onset":
                                        diagnosisClass = "diagnosis-high";    // Red - Early onset diabetes risk (highest severity)
                                        break;
                                    default:
                                        diagnosisClass = "diagnosis-none";    // Gray for any other value
                                        break;
                                }
                            }
                            
                            <span class="badge @diagnosisClass text-white">@diagnosis</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Notes Section -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-sticky-note me-2"></i>
                    Medical Notes (@Model.Notes.Count)
                </h5>
                <a href="/notes/add?patientId=@Model.PatientId" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus me-1"></i>Add Note
                </a>
            </div>
            <div class="card-body">
                @if (Model.Notes.Any())
                {
                    <div class="row">
                        @foreach (var note in Model.Notes.OrderByDescending(n => n.CreatedAt))
                        {
                            <div class="col-md-6 mb-3">
                                <div class="card h-100 border-start border-primary border-3">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h6 class="card-title mb-0">Note #@note.Id</h6>
                                            <small class="text-muted">
                                                @note.CreatedAt.ToString("MMM dd, yyyy 'at' HH:mm")
                                            </small>
                                        </div>
                                        <p class="card-text">@note.Content</p>
                                       @*  @if (!string.IsNullOrEmpty(note.Author))
                                        {
                                            <small class="text-muted">
                                                <i class="fas fa-user-md me-1"></i>@note.Author
                                            </small>
                                        } *@
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-clipboard text-muted" style="font-size: 3rem;"></i>
                        <h5 class="mt-3 text-muted">No Notes Available</h5>
                        <p class="text-muted">No medical notes have been recorded for this patient yet.</p>
                        <a href="/notes/add?patientId=@Model.PatientId" class="btn btn-outline-primary">
                            <i class="fas fa-plus me-1"></i>Add First Note
                        </a>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Patient information could not be loaded.
        </div>
    }
</div>